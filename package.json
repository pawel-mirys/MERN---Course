{
  "name": "proshop",
  "version": "1.0.0",
  "description": "eCommerce app for portfolio built with the MERN stack",
  "type": "module",
  "main": "server.ts",
  "scripts": {
    "server": "nodemon ./backend/dist/server.js",
    "client": "npm run dev --prefix frontend",
    "watch": "tsc -w",
    "dev": "concurrently \"npm run server\" \"npm run client\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pawel-mirys/MERN---Course.git"
  },
  "keywords": [
    "MERN",
    "eCommerce",
    "portfolio",
    "app"
  ],
  "author": "Pawel Mirys",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pawel-mirys/MERN---Course/issues"
  },
  "homepage": "https://github.com/pawel-mirys/MERN---Course#readme",
  "dependencies": {
    "express": "^4.18.3",
    "mongoose": "^8.2.1",
    "undici-types": "^6.7.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "concurrently": "^8.2.2",
    "dotenv": "^16.4.5",
    "nodemon": "^3.1.0"
  }
}
